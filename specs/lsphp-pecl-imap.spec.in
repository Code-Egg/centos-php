# LiteSpeed custom spec for PHP 8.4 IMAP extension

%undefine _strict_symbol_defs_build

%define php_prefix lsphp%%PHP_VER%%
%define _prefix /usr/local/lsws/%{php_prefix}
%define _sysconfdir %{_prefix}/etc
%define _localstatedir %{_prefix}/var
%define _libdir %{_prefix}/%{_lib}
%define _bindir %{_prefix}/bin
%define php_inidir %{_prefix}/etc/php.d
%define php_extdir %{_libdir}/php/modules
%define php_incldir %{_prefix}/include/php
%define __php %{_bindir}/php
%global ini_name 50-%{pecl_name}.ini
%global pecl_name imap
%global php_zend_api %%PHP_API%%
%global php_core_api %%PHP_API%%

Name:           %{php_prefix}-%{pecl_name}
Summary:        IMAP extension
Version:        %%VERSION%%
Release:        %%BUILD%%%{?dist}%{!?scl:%{!?nophptag:%(%{__php} -r 'echo ".".PHP_MAJOR_VERSION.".".PHP_MINOR_VERSION;')}}
License:        BSD and LGPLv3+
URL:            https://www.php.net/imap
Source0:        http://pecl.php.net/get/%{pecl_name}-%{version}.tgz

BuildRequires:  make
BuildRequires:  %{?dtsprefix}gcc
BuildRequires:  %{php_prefix}-devel
BuildRequires:  uw-imap-devel
BuildRequires:  krb5-devel
BuildRequires:  openssl-devel

Requires:       %{php_prefix}(api) = %{php_api}
Requires:       %{php_prefix}-common

Provides:     %{?php_prefix}-%{pecl_name}               = %{version}
Provides:     %{?php_prefix}-%{pecl_name}%{?_isa}       = %{version}
Provides:     %{?php_prefix}-pecl(%{pecl_name})         = %{version}
Provides:     %{?php_prefix}-pecl(%{pecl_name})%{?_isa} = %{version}

Provides:       %{php_prefix}-pecl(%{pecl_name}) = %{version}
Provides:       %{php_prefix}-%{pecl_name} = %{version}

%description
IMAP extension, supports access to mailboxes using IMAP, POP3, and NNTP.

%prep
%setup -q -n php-%{version}

cd ext/%{pecl_name}

# clean out stub files (if any)
rm -f *.stub.php

%build
cd ext/%{pecl_name}
%{_bindir}/phpize
%configure \
    --with-php-config=%{_bindir}/php-config \
    --with-imap \
    --with-kerberos \
    --with-imap-ssl
%make_build

%install
cd ext/%{pecl_name}
%make_install INSTALL_ROOT=%{buildroot}

# ini file
mkdir -p %{buildroot}%{php_inidir}
cat > %{buildroot}%{php_inidir}/%{ini_name} <<EOF
; Enable imap extension module
extension=imap.so
EOF

%check
%{__php} --no-php-ini \
    --define extension_dir=%{buildroot}%{php_extdir} \
    --define extension=imap.so \
    --modules | grep '^imap$'

%files
%config(noreplace) %{php_inidir}/%{ini_name}
%{php_extdir}/imap.so

